<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C0FFFFFF"
        android:elevation="4dp"
        android:padding="20dp"
        android:orientation="vertical">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout Confirmation"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="20sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/dialogMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Are you sure you want to log out?"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_marginTop="10dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/confirmLogoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="L O G O U T"
        android:backgroundTint="#8DB2F3"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/cancelLogoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-medium"
        android:backgroundTint="#8DB2F3"
        android:text="C A N C E L"
        android:layout_marginTop="10dp"/>

    </LinearLayout>
</LinearLayout>
